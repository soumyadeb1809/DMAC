<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.jobs.FileReUploadActivity">

    <include layout="@layout/toolbar_transparent_light"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:paddingStart="20dp"
        android:elevation="0dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-Upload File"
            android:textSize="20sp"
            android:id="@+id/title_login"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/bannerFilter"
            />

        <View
            android:layout_width="48dp"
            android:layout_height="3dp"
            android:background="@color/colorYellow"
            android:layout_marginTop="6dp"
            android:id="@+id/title_dash_login"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File ID"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:focusable="false"
                android:fontFamily="@font/montserrat_regular"
                android:background="@drawable/back_et_form"
                android:id="@+id/et_file_id"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Name"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginBottom="10dp"
                android:id="@+id/label_business_name"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:focusable="false"
                android:fontFamily="@font/montserrat_regular"
                android:background="@drawable/back_et_form"
                android:id="@+id/et_file_name"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Notes"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:background="@drawable/back_et_form"
                android:id="@+id/et_file_notes"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose new file"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginBottom="10dp"
                android:id="@+id/label_others_copy"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/img_new_file"
                    android:src="@drawable/back_et_form"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/grp_upload_file"
        android:background="@drawable/back_create_account"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload File"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>


</LinearLayout>