<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".ui.home.jobs.JobDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:elevation="2dp"
        android:id="@+id/grp_topbar"
        android:paddingStart="8dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/grp_back"
            android:background="@drawable/back_white_accent_rounded"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/img_toggle"
                android:src="@drawable/ic_back"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Details"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/grp_back"
            android:textSize="24sp"
            android:id="@+id/title_my_files"
            android:fontFamily="@font/ssp_bold"
            android:textColor="@color/bannerFilter"
            />


        <View
            android:layout_width="48dp"
            android:layout_height="3dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/grp_back"
            android:layout_below="@id/title_my_files"
            android:background="@color/colorYellow"
            android:layout_marginTop="6dp"
            android:id="@+id/title_my_jobs"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/grp_topbar"
        android:nestedScrollingEnabled="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            >




            <include layout="@layout/card_job_detail"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/colorLighterGray"
                />

            <include layout="@layout/card_uploaded_files"
                android:id="@+id/grp_uploaded_files"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/colorLighterGray"
                />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>