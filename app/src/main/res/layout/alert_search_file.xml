<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Files"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Created"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Start Date"
                android:clickable="true"
                android:gravity="center"
                android:background="@drawable/back_et_form"
                android:layout_weight="1"
                android:id="@+id/file_created_start_dt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="to"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="End Date"
                android:clickable="true"
                android:gravity="center"
                android:background="@drawable/back_et_form"
                android:layout_weight="1"
                android:id="@+id/file_created_end_dt"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Updated"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Start Date"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/back_et_form"
                android:layout_weight="1"
                android:id="@+id/last_updated_start_dt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="to"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="End Date"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/back_et_form"
                android:layout_weight="1"
                android:id="@+id/last_updated_end_dt"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="8dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="1"
            android:id="@+id/et_file_name"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/back_et_form"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Status"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/label_file_type"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_et_form"
            >
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/spinner_file_status"
                />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>