<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/director_details"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Director Details"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/title_business_info"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grp_director_info"
        android:orientation="vertical"
        >

        <include layout="@layout/card_ad_director_info"
            android:id="@+id/director_1_info"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/colorLighterGray"
        android:layout_marginTop="16dp"
        />

</LinearLayout>