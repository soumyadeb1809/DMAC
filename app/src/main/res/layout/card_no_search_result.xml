<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_search_large"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No results found for given search"
            android:layout_marginTop="10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLEAR SEARCH"
                android:textColor="@drawable/back_darker_grey_rounded"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/btn_clear_search"
                android:background="@drawable/back_darker_grey_rounded"
                android:layout_marginEnd="16dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" EDIT SEARCH "
                android:layout_marginStart="16dp"
                android:textColor="@drawable/back_darker_grey_rounded"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/btn_edit_search"
                android:background="@drawable/back_darker_grey_rounded"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>