<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLighterGray"
    tools:context=".ui.home.reports.ReportsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textSize="24sp"
                android:id="@+id/title_login"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/bannerFilter"
                />


            <View
                android:layout_width="48dp"
                android:layout_height="3dp"
                android:background="@color/colorYellow"
                android:layout_marginTop="6dp"
                android:id="@+id/title_dash_login"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/grp_req_report">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_et_form"
                    android:layout_marginEnd="16dp"
                    >
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/spinner_req_report"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Start Date"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/back_et_form"
                    android:layout_weight="1"
                    android:id="@+id/txt_start_dt"
                    android:layout_marginEnd="8dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="End Date"
                    android:gravity="center"
                    android:clickable="true"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/back_et_form"
                    android:layout_weight="1"
                    android:id="@+id/txt_end_dt"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/back_create_account"
            android:clickable="true"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/btn_req_report"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:text="Request Report"
                android:fontFamily="@font/montserrat_bold"
                android:textStyle="bold"
                />
        </LinearLayout>



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_reports"
        />

</LinearLayout>